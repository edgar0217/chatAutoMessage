<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Login</title>
    <link rel="stylesheet" href="/css/output.css" />
  </head>
  <body class="bg-gray-100 flex justify-center items-center min-h-screen">
    <form
      action="/login"
      method="POST"
      class="bg-white p-8 rounded shadow max-w-sm w-full"
    >
      <h1 class="text-2xl font-bold mb-4">Admin Login</h1>
      <% if (error) { %>
      <div class="text-red-600 mb-4"><%= error %></div>
      <% } %>
      <input
        type="text"
        name="username"
        placeholder="Usuario"
        required
        class="mb-4 w-full px-3 py-2 border rounded"
      />
      <div class="relative mb-4">
        <input
          type="password"
          name="password"
          id="password"
          placeholder="ContraseÃ±a"
          required
          class="w-full px-3 py-2 border rounded pr-10"
        />
        <button
          type="button"
          id="togglePassword"
          class="absolute inset-y-0 right-0 flex items-center px-3 text-gray-600"
          tabindex="-1"
        >
          <svg
            id="icon-eye"
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
            />
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
            />
          </svg>
        </button>
      </div>
      <button
        type="submit"
        class="w-full bg-yellow-400 text-white py-2 rounded hover:bg-yellow-500 transition"
      >
        Entrar
      </button>
    </form>

    <script>
      const passwordInput = document.getElementById("password");
      const togglePassword = document.getElementById("togglePassword");
      const iconEye = document.getElementById("icon-eye");

      togglePassword.addEventListener("click", function () {
        const isPassword = passwordInput.type === "password";
        passwordInput.type = isPassword ? "text" : "password";
        iconEye.innerHTML = isPassword
          ? `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.542-7a9.963 9.963 0 012.09-3.368m3.359-2.598A9.956 9.956 0 0112 5c4.478 0 8.268 2.943 9.542 7a9.956 9.956 0 01-4.421 5.344M15 12a3 3 0 11-6 0 3 3 0 016 0zM3 3l18 18"/>`
          : `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>`;
      });
    </script>
  </body>
</html>
